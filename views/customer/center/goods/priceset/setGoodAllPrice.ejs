<% include ../../../header.ejs%>
<%
var paginator = data.paginator || {};
var pageSize = parseInt(paginator.ps) || 10;
var page = parseInt(paginator.p) || 1;
%>

<div style="position:relative;width:100%;height:100%;">
    <!--Layout-->
    <div class="site-layout">
        <!--Header Toolbar-->

        <!--Header Toolbar Close-->

        <!--Header-->
        <% include ../../_nav_head.ejs%>
        <div class="page">

            <div class="container page-content" style="min-height:800px">
                <div class="row space-top">
                    <!-- Sidebar-->
                    <% var active = "lists"; %>
                    <% include ../../_nav_customer_left.ejs%>
                    <!-- Sidebar CLose-->
                    <section class="col-md-10 pull-right  space-bottom page-content-right">



                        <% var basicPriceInfo=data.priceData.goodsBasicInfo[0];
                        %>

                        <aside class="page-content-right-head" style="background: rgb(236, 236, 236);">
                            <label style="margin-right: 30px;margin-left: 8px;">
                                调价一览表
                            </label>

                            <label style="float:right;margin-right: 30px;">
                                <input type="hidden" id="hiddenGoodsId" value="<%=basicPriceInfo.id
                                %>"/>
                                <%=basicPriceInfo.goodsNo%>/<%=basicPriceInfo.commonName%>/<%=basicPriceInfo.producer==''?'':basicPriceInfo.producer+'/'  %><%=basicPriceInfo.spec%>
                            </label>
                        </aside>

                        <div class="col-sm-12" style="">

                            <div style="margin-top:20px;margin-bottom:10px">基础价格</div>
                            <table class="table page-table" style="border:1px solid #ddd;margin-bottom:20px">
                                <thead style="background-color:rgb(236, 236, 236);">
                                <tr>
                                    <td><strong>价格类型</strong></td>
                                    <td><strong>当前价格</strong></td>
                                    <td>
                                        <strong>调整价格</strong>
                                        <a style="margin-left:0px"  title="调价历史一览表" href="/customer/priceset/goodsbasicpricehistory?goodsId=<%=basicPriceInfo.id %>">
                                            <i class="fa fa-bar-chart"></i>
                                        </a>
                                    </td>
                                </tr>
                                </thead>
                                <tbody id="basicPriceInfo">
                                        <tr>
                                            <td>国家限价</td>
                                            <td><%=basicPriceInfo['limitedPrice'].toFixed(4) %></td>
                                            <td>
                                                <input  name="limitedPrice"  class="waitChangePriceInput" type="text"  style="width:107px;" value="<%=basicPriceInfo['limitedPrice'].toFixed(4) %>" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>零售价</td>
                                            <td><%=basicPriceInfo['refRetailPrice'].toFixed(4) %></td>
                                            <td>
                                                <input name="refRetailPrice" class="waitChangePriceInput" type="text"  style="width:107px;" value="<%=basicPriceInfo['refRetailPrice'].toFixed(4) %>" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>批发价</td>
                                            <td><%=basicPriceInfo['wholesalePrice'].toFixed(4) %></td>
                                            <td>
                                                <input  name="wholesalePrice" class="waitChangePriceInput" type="text"  style="width:107px;" value="<%=basicPriceInfo['wholesalePrice'].toFixed(4) %>" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>价格一</td>
                                            <td><%=basicPriceInfo['price1'].toFixed(4) %></td>
                                            <td>
                                                <input name="price1" class="waitChangePriceInput" type="text"  style="width:107px;" value="<%=basicPriceInfo['price1'].toFixed(4) %>" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>价格二</td>
                                            <td><%=basicPriceInfo['price2'].toFixed(4) %></td>
                                            <td>
                                                <input name="price2" class="waitChangePriceInput" type="text"  style="width:107px;" value="<%=basicPriceInfo['price2'].toFixed(4) %>" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>价格三</td>
                                            <td><%=basicPriceInfo['price3'].toFixed(4) %></td>
                                            <td>
                                                <input name="price3" class="waitChangePriceInput" type="text"  style="width:107px;" value="<%=basicPriceInfo['price3'].toFixed(4) %>" />
                                            </td>
                                        </tr>
              <!--
                                        <tr>
                                            <td>国家限价</td>
                                            <td>
                                                <span>50.34</span>
                                            </td>
                                            <td>
                                                <input class="waitChangePriceInput" type="text"  style="width:107px;" value="595.0878d" />
                                            </td>
                                        </tr>-->
                                </tbody>

                            </table>

                            <div style="margin-top:20px;margin-bottom:10px">客户类价格</div>
                            <table class="table page-table" style="border:1px solid #ddd;margin-bottom:20px">
                                <thead style="background-color:rgb(236, 236, 236);">
                                <tr>
                                    <td><strong>客户类别</strong></td>
                                    <td><strong>当前价格</strong></td>
                                    <td>
                                        <strong>调整价格</strong>
                                        <a style="margin-left:0px"  title="调价历史一览表" href="/customer/priceset/clientcategorypricehistory?goodsId=<%=basicPriceInfo.id%>&&clientCategoryId=0">
                                            <i class="fa fa-bar-chart"></i>
                                        </a>
                                    </td>
                                </tr>
                                </thead>
                                <tbody id="clientCategoryPriceInfo">
                                <% var basicClientCategoryPrice=data.priceData.goodsClientCategoryPriceInfo; %>
                                <% for (var i = 0; i < basicClientCategoryPrice.length;i++){%>
                                <% var currentItem=basicClientCategoryPrice[i] ;%>
                                <tr>
                                    <td>
                                        <%= currentItem.categoryName %>
                                        <input type="hidden" value="<%= currentItem.id %>"/>
                                    </td>
                                    <td>
                                        <%= currentItem.clientCategoryPrice.toFixed(4) %>

                                    </td>
                                    <td>
                                        <input class="waitChangePriceInput" type="text"  style="width:107px;" value="<%= currentItem.clientCategoryPrice.toFixed(4) %>" />
                                   <!--     <a style="margin-left:0px"  title="调价历史一览表" href="/customer/priceset/clientcategorypricehistory?goodsId=<%=basicPriceInfo.id%>&&clientCategoryId=<%= currentItem.id ;%>">
                                            <i class="fa fa-bar-chart"></i>
                                        </a>-->
                                    </td>
                                </tr>
                                <%}%>

                                </tbody>

                            </table>

                            <div style="margin-top:20px;margin-bottom:10px">客户单品价格</div>
                            <table class="table page-table" style="border:1px solid #ddd;margin-bottom:20px">
                                <thead style="background-color:rgb(236, 236, 236);">
                                <tr>
                                    <td><strong>客户名称/编号</strong></td>
                                    <td><strong>当前价格</strong></td>
                                    <td>
                                        <strong>调整价格</strong>
                                        <a style="margin-left:0px"  title="调价历史一览表" href="/customer/priceset/clientpricehistory?goodsId=<%=basicPriceInfo.id %>" >
                                            <i class="fa fa-bar-chart"></i>
                                        </a>
                                    </td>
                                </tr>
                                </thead>
                                <tbody id="clientPriceInfo">
                                <% var basicClientPrice=data.priceData.goodsClientPriceInfo; %>
                                <% for(var i=0;i<basicClientPrice.length;i++){%>
                                <% var currentItem=basicClientPrice[i];
                                %>
                                    <tr>
                                        <td>
                                            <%= currentItem.clientName %>/<%= currentItem.number%>
                                            <input type="hidden" value="<%= currentItem.id %>"/>
                                        </td>
                                        <td>
                                            <%= currentItem.clientPrice.toFixed(4) %>

                                        </td>
                                        <td>
                                            <input class="waitChangePriceInput" type="text"  style="width:107px;" value="<%= currentItem.clientPrice.toFixed(4) %>" />
                                          <!--  <a style="margin-left:0px"  title="调价历史一览表" href="/customer/priceset/clientpricehistory?goodsId=<%=basicPriceInfo.id %>&&clientName=<%=currentItem.clientName%>&&clientId=<%=currentItem.id%>"+>
                                                <i class="fa fa-bar-chart"></i>
                                            </a>-->

                                        </td>
                                    </tr>
                                <%}%>

                                </tbody>

                            </table>

                            <div style="margin-top:20px;margin-bottom:10px">调价原因</div>
                            <div>
                                <textarea id="ModifyPriceReason" style="height:153px;width:100%;resize:none;"></textarea>
                            </div>

                            <div style="margin-top:17px;margin-bottom:10px">审核人</div>
                            <div class="radioGroup" style="margin-bottom:20px">
                                <% for(var i=0;i<data.priceData.operatorlist.length;i++){%>
                                    <% var currentPerson=data.priceData.operatorlist[i]; %>

                                <div class="radio">
                                    <label ><input id="<%=currentPerson.operatorId %>" name="checkPerson" type="radio" value="true"><%= currentPerson.operatorName%></label>
                                </div>
                                <%}%>
                            </div>
                        </div>
                    </section><!--Catalog List Close-->


                    <section class="col-md-10 space-bottom space-top pull-right">
                        <div class="pull-left">
                            <button id="btnChangePrice" class="btn btn-primary">生成调价单</button>
                            <a href="/customer/priceset/setprice" class="btn btn-default">取消</a>
                        </div>

                    </section>
                </div>

            </div>
        </div>
    </div>
    <% include ../../../_nav_bottom.ejs%>
</div>
<% include  ../../../footer.ejs %>
<script src="/static/source/js/customer/priceset.js"></script>