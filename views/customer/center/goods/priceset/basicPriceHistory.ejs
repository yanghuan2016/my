<% include ../../../header.ejs%>
<%
var paginator = data.paginator || {};
var pageSize = parseInt(paginator.ps) || 10;
var page = parseInt(paginator.p) || 1;
%>

<div style="position:relative;width:100%;height:100%;">
    <!--Layout-->
    <div class="site-layout">
        <!--Header Toolbar-->
        <% include ../../../_nav_top.ejs %>
        <!--Header Toolbar Close-->

        <!--Header-->
        <% include ../../_nav_head.ejs%>
        <div class="page">

            <div class="container page-content" style="min-height:800px">
                <div class="row space-top">
                    <!-- Sidebar-->
                    <% var active = "lists"; %>
                    <% include ../../_nav_customer_left.ejs%>
                    <!-- Sidebar CLose-->
                    <section class="col-md-10 pull-right  space-bottom page-content-right">



                        <% var basicPriceInfo=data.PriceData.goodsBasicInfo[0];
                        %>

                        <aside class="page-content-right-head" style="background: rgb(236, 236, 236);">

                            <label style="float:left;margin-right: 30px;">
                                <input type="hidden" id="hiddenGoodsId" value="<%=basicPriceInfo.id %>"/>
                                <%=basicPriceInfo.goodsNo%>/<%=basicPriceInfo.commonName%>/<%=basicPriceInfo.producer==''?'':basicPriceInfo.producer+'/'  %><%=basicPriceInfo.spec%>
                            </label>


                            <div style="float:right;display:none">
                                <div style="height: 50px;">
                                    <i class="fa fa-calendar"></i>
                                    <input style="vertical-align:middle"  value=""   placeholder="开始时间"  id="priceStartDate" type="text" readonly class="datePicker selectTime"/>
                                    －
                                    <i class="fa fa-calendar"></i>
                                    <input style="vertical-align:middle"   value="" placeholder="截止时间" id="priceEndDate" type="text"  readonly class="datePicker selectTime"/>
                                </div>
                                <a class="btn btn-primary " >查询</a>
                            </div>

                        </aside>

                        <div class="col-sm-12" style="padding-right:0px;padding-left:0px">

                            <table class="table page-table " style="margin-bottom:20px">
                                <thead>
                                <tr>
                                    <td><strong>调价时间</strong></td>

                                    <td style="width:40%">
                                        <strong>国/零/批/价1/价2/价3</strong>
                                    </td>
                                    <td>
                                        <strong>调价原因</strong>
                                    </td>
                                    <td><strong>操作</strong></td>
                                </tr>
                                </thead>
                                <tbody id="basicPriceInfo">
                                <% for(var i=0;i<data.PriceData.readjustPriceInfo.length;i++){%>
                                <% var item=data.PriceData.readjustPriceInfo[i]; %>

                                        <tr>
                                            <td>
                                                <%= item.createdOn %>
                                            </td>
                                            <td style="font-size:14px">
                                                <% var limitedPriceChanged=item.limitedPriceOrigin!=item.limitedPriceNew  %>
                                                <% var refRetailPriceChanged=item.refRetailPriceOrigin!=item.refRetailPriceNew  %>
                                                <% var wholesalePriceChanged=item.wholesalePriceOrigin!=item.wholesalePriceNew  %>
                                                <% var price1PriceChanged=item.price1Origin!=item.price1New  %>
                                                <% var price2PriceChanged=item.price2Origin!=item.price2New  %>
                                                <% var price3PriceChanged=item.price3Origin!=item.price3New  %>
                                                <span style="<%= limitedPriceChanged?'color:red':null %>">&yen;<%= item.limitedPriceNew.toFixed(4) %></span>
                                                /<span style="<%= refRetailPriceChanged?'color:red':null %>">&yen;<%= item.refRetailPriceNew.toFixed(4)%></span>
                                                /<span style="<%= wholesalePriceChanged?'color:red':null %>">&yen;<%= item.wholesalePriceNew.toFixed(4)%></span>
                                                /<span style="<%= price1PriceChanged?'color:red':null %>">&yen;<%= item.price1New.toFixed(4)%></span>
                                                /<span style="<%= price2PriceChanged?'color:red':null %>">&yen;<%= item.price2New.toFixed(4)%></span>
                                                /<span style="<%= price3PriceChanged?'color:red':null %>">&yen;<%= item.price3New.toFixed(4)%></span>

                                            </td>
                                            <td>
                                                <%= item.readjustReason %>
                                            </td>
                                            <td>
                                                <a href="/customer/priceset/approvedPriceModify?adjustPriceId=<%= item.readjustId; %>"><i class="fa fa-binoculars"></i></a>
                                            </td>


                                        </tr>

                                <%}%>

                                </tbody>

                            </table>




                        </div>
                    </section><!--Catalog List Close-->


                    <section class="col-md-10 space-bottom space-top pull-right">
                        <div class="pull-left">
                            <a href="/customer/priceset/setgoodallprice?goodsId=<%=basicPriceInfo.id %>" class="btn btn-primary">返回</a>
                        </div>
                        <div class="pull-right">
                            <% var url = "priceset/goodsbasicpricehistory?goodsId="+basicPriceInfo.id %>
                            <% include ../../../_paginator.ejs%>
                        </div>
                    </section>
                </div>

            </div>
        </div>
    </div>
    <% include ../../../_nav_bottom.ejs%>
</div>
<% include  ../../../footer.ejs %>
<script src="/static/source/js/customer/priceset.js"></script>
<script type="text/javascript">
    $(function(){
        $('.datePicker').datetimepicker({
            timepicker: false,
            format:'Y-m-d',
        });
        //查询事件
        $(document).delegate('#BasicPriceModifyHistorySearchBtn','click',function(){
                //var valueStartDate


        });
    });
</script>