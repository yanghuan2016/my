                            <% var element = ele.children[tempThree]%>
                            <% index_three++; %>
                            <li class="nav-list_two_<%= index_three %>">
                                <a fullname="<%= element.fullname.replace(/\{\d{1,}/g, "")%>" value="<%= element.erpId%>"><%= element.name%></a>
                            </li>
                            <% } %>
                        </ul>
                        <% } %>
                    </li>
                    <% } %>
                </ul>
                <% } %>
            </li>
            <%}%>
        </ul>
