<div>
    <div class="self-select-wrapper">
        <span class="self-select-display clicked">
            <span class="self-select-text" value="<%= currentgoodsType?currentgoodsType[0].erpId:""%>"><%= currentgoodsType?currentgoodsType[0].fullname.replace(/\{\d{1,}/g, ""):"请选择"%></span>
            <i class="self-select-arrow-down"></i>
        </span>
        <ul class="self-select-ul" data-dispaly="hide">
            <% var index = 0;%>
            <% var goodsType = goodsTypes.children;%>
            <% for(var item in goodsType){%>
            <% var key = goodsType[item]%>
            <% index++; %>
            <li class="self-select-option_<%= index%>" style="position: relative">
                <a class="self-select-option" fullname="<%= key.fullname.replace(/\{\d{1,}/g, "")%>" value="<%= key.erpId%>"><%= key.name%></a>
