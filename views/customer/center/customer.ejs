<% include ../header.ejs%>
<div style="position:relative;width:100%;height:100%;">
    <!--Layout-->
    <div class="site-layout">

        <!--Header-->
        <% include _nav_head.ejs%>
        <div class="page container page-content" >
            <!--<div class="container"></div>-->
            <div class="row space-top">
                <!-- Sidebar-->
                <% var active = "personal_center_customer"; %>
                <% include _nav_customer_left.ejs%>
                <!-- Sidebar CLose-->
                <section class="col-md-10">
                    <table class="sm-page-table">
                        <thead>
                        <tr>
                            <td class="goods-info" colspan="2"><strong>账户信息</strong></td>
                        </tr>
                        </thead>
                        <% var customer = data.customerData[0]%>
                        <tbody>
                        <tr>
                            <td style="width: 15%;">企业名称：</td>
                            <td style="width: 80%;" class="goods-info" ><%=customer.customerName%></td>
                        </tr>
                        <tr>
                            <td style="width: 15%;">营业执照：</td>
                            <td style="width: 80%;" class="goods-info" ><%=customer.businessLicense%></td>
                        </tr>
                        <tr>
                            <td style="width: 15%;">执照期限:</td>
                            <td style="width: 80%;" class="goods-info" ><%=customer.businessLicenseValidateDate%></td>
                        </tr>
                        <tr>
                            <td style="width: 15%;">营业地址:</td>
                            <td style="width: 80%;" class="goods-info" ><%=customer.businessAddress%></td>
                        </tr>
                        <tr>
                            <td style="width: 15%;">法人代表:</td>
                            <td style="width: 80%;" class="goods-info" ><%=customer.legalRepresentative%></td>
                        </tr>
                        <tr>
                            <td style="width: 15%;">登录账号:</td>
                            <td style="width: 80%;" class="goods-info" ><%=data._userInfo.username%></td>
                        </tr>
                        <tr>
                            <td style="width: 15%;">登录密码:</td>
                            <td style="width: 80%;" class="goods-info" ><a href="/customer/password">点击更改</a></td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="space-top">
                        <table class="sm-page-table ">
                            <thead>
                            <tr>
                                <td class="goods-info"><strong>最新消息</strong></td>
                                <td></td>
                            </tr>
                            </thead>
                            <tbody>
                            <% var msgTypesName = {
                                "DOC_ORDER": "订单信息",   /* 订单相关的通知 */
                                "DOC_SHIP": "发货信息",    /* 发货单相关通知 */
                                "DOC_RETURN": "退货信息",  /* 退货相关通知 */
                                "DOC_REFUND": "退款信息",  /* 退款相关通知 */
                                "DOC_COMPLAIN": "投诉建议",/* 投诉建议相关通知 */
                                "DOC_ACCOUNT": "证照客户资料", /* 证照客户资料相关通知 */
                                "DOC_PRICE": "调价单信息",   /* 调价单相关通知 */
                                "DOC_OTHER": "其他客户通知"    /* 其他客户通知 */
                            } %>
                            <% var messages = data.messages || []; %>
                            <% var style = {
                                'UNREAD':{
                                    FONT_COLOR: '#333',
                                    COLOR: 'red'
                                },
                                'READ':{
                                    FONT_COLOR: '#999',
                                    COLOR: '#DDD'
                                }
                            } %>
                            <% for(var i=0; i<messages.length; i++){ %>
                            <tr>
                                <td class="goods-info">
                                    <i class="fa fa-circle" style="color: <%= style[messages[i].status].COLOR %>;margin-left: 5px;font-size: 11px"></i>
                                    <a href="/customer/message/read?docType=<%= messages[i].docType+'&msgId='+messages[i].id +
                                    '&docId='+messages[i].docId %>"
                                       data-status="<%=  %>" style="color: <%= style[messages[i].status].FONT_COLOR%>;font-size: 14px; " onclick="Read(<%= %>)">
                                        <%= messages[i].messageBody ||　'您有一个新的'+ msgTypesName[messages[i].docType]+'，去处理[单号:'+
                                            messages[i].displayDocId+']>'%>
                                    </a>
                                </td>
                                <td style="color:#3A3A3A;width: 150px"  class="text-end">
                                    <%= messages[i].sentTime %>
                                </td>
                            </tr>
                            <% } %>
                            </tbody>
                            <!--<tr>-->
                            <!--<td colspan="5" style="height: 200px">-->
                            <!--<h4 class="blank-content">您目前没有消息信息</h4>-->
                            <!--</td>-->
                            <!--</tr>-->
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <% include ../_nav_bottom.ejs%>
</div>
<% include  ../footer.ejs %>