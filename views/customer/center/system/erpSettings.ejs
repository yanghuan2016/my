<% include ../../header.ejs%>

<div style="position:relative;width:100%;height:100%;">
    <!--Layout-->
    <div class="site-layout">
        <!--Header Toolbar-->

        <!--Header Toolbar Close-->

        <!--Header-->
        <% include ../_nav_head.ejs%>
        <div class="page double-padding-bottom">
            <div class="container page-content">
                <div class="row space-top">
                    <% var active = "product_setting"; %>
                    <% include ../_nav_customer_left.ejs%>

                    <section class="col-md-10 pull-right space-bottom">
                        <div class="filterDivTab">
                            <div class="tabList">
                                <a href="/customer/system/product">商品类别</a>
                                <a href="/customer/system/inventory">库存方案</a>
                                <a href="/customer/system/customer">客户类</a>
                                <a href="/customer/system/domainSetting">客户区域</a>
                                <a href="/customer/system/packUnit">包装单位</a>
                                <a href="/customer/system/erpSetting" class="itemActive">ERP</a>
                                <a href="/customer/system/productJX">剂型</a>
                                <a href="/customer/system/productGSP">GMP/GSP类别</a>
                                <a href="/customer/system/paymentType">收款方式</a>
                                <a href="/customer/system/smsGetway">短信网关</a>
                                <a href="/customer/system/others">其他</a>
                            </div>
                        </div>
                        <section class="page-content-right">
                            <table class="sm-page-table erp-setting-tab" style="border-top: 1px solid #e6e6e6">
                                <tbody>
                                <%  var erpEnable=data.erpSetting.erpIsAvailable==1;  %>
                                <tr class="erpIsEnableTr" erpEnable="<%= erpEnable %>">
                                    <td class="td-per-25">是否启动erp:</td>
                                    <td class="td-per-45" style="line-height: 20px">
                                        <div class="radio radioInErpSettings">
                                            <input name="isEnable" id="erpEnabled" type="radio" value="true">是
                                        </div>
                                        <div class="radio radioInErpSettings">
                                            <input name="isEnable" type="radio" value="false">否
                                        </div>
                                    </td>
                                    <td class="td-per-30">&nbsp;</td>
                                </tr>
                                <tr class="erpContent" style="<%= erpEnable==false?"display:none":"" %>">
                                    <td>消息接口地址:</td>
                                    <td>
                                        <span><%= data.msgApi %></span>
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr class="erpContent" style="<%= erpEnable==false?"display:none":"" %>">
                                    <td>AppCode获取地址:</td>
                                    <td>
                                        <span><%= '' + data.appCodeApi %></span>
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr class="erpContent" style="<%= erpEnable==false?"display:none":"" %>">
                                    <td>APPKEY:</td>
                                    <td>
                                        <span id="appKey" style="width: 290px; display: inline-block"><%= data.erpSetting.appKey %></span>
                                        <button class="btn btn-primary btn-small" data-attr="customer" id="updateAppKey" >生成APPKEY</button>
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr class="erpContent" style="<%= erpEnable==false?"display:none":"" %>">
                                    <td>ERP 消息接口地址:</td>
                                    <td class="td-per-45">
                                        <input placeholder="单行输入" value="<%= data.erpSetting.erpMsgUrl %>"  type="text" id="erpMsgUrl"/>
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr class="erpContent" style="<%= erpEnable==false?"display:none":"" %>">
                                    <td>ERP APPCODE 接口地址:</td>
                                    <td>
                                        <input placeholder="单行输入" value="<%= data.erpSetting.erpAppCodeUrl %>" type="text" id="erpAppCodeUrl"/>
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr class="erpContent" style="<%= erpEnable==false?"display:none":"" %>">
                                    <td>APPCODE:</td>
                                    <td>
                                        <span placeholder="单行输入" style="width:406px" type="text"><%= data.appCode %> </span>
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr class="erpContent">
                                    <td></td>
                                    <td>
                                        <button class="btn btn-primary" data-attr="customer" id="saveErpSetting">保存</button>
                                    </td>
                                    <td></td>
                                </tr>
                                </tbody>
                            </table>
                        </section>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <% include ../../_nav_bottom.ejs%>
</div>
<% include  ../../footer.ejs %>
<script src="/static/source/js/erpSetting.js"></script>
