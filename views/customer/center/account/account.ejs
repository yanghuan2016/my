<% include ../../header.ejs%>
<%
var paginator = data.paginator || {};
var pageSize = parseInt(paginator.ps) || 10;
var page = parseInt(paginator.p) || 1;
%>

<div style="position:relative;width:100%;height:100%;">
    <!--Layout-->
    <div class="site-layout">
        <!--Header Toolbar-->

        <!--Header Toolbar Close-->

        <!--Header-->
        <% include ../_nav_head.ejs%>
        <div class="page">
            <div class="container page-content">
                <div class="row space-top">
                    <!-- Sidebar-->
                    <% var active = "accounts"; %>
                    <% include ../_nav_customer_left.ejs%>
                    <!-- Sidebar CLose-->
                    <section class="col-md-10 space-bottom">
                        <div class="filterDiv pull-right">
                            <div class="filterHead">
                                <a class="btn btn-primary" href="/customer/account/add">新增</a>
                            </div>
                        </div>
                        <div class="space-top">
                            <table class="sm-page-table">
                                <thead>
                                <tr>
                                    <td><strong>登录账户</strong></td>
                                    <td><strong>姓名</strong></td>
                                    <td><strong>联系电话</strong></td>
                                    <td><strong>部门</strong></td>
                                    <td><strong>状态</strong></td>
                                    <td><strong>操作</strong></td>
                                </tr>
                                </thead>
                                <tbody>
                                <% var users = data.accounts%>
                                <% for(var i in users){%>
                                <tr class="client">
                                    <td><%= users[i].username%></td>
                                    <td><%= users[i].operatorName%></td>
                                    <td><%= users[i].mobileNum%></td>
                                    <td><%= users[i].department%></td>
                                    <td>
                                        <%if(users[i].enable == 0){%>
                                        已禁用
                                        <% } else {%>
                                        已启用
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/customer/account/edit?operatorId=<%= users[i].operatorId%>&action=edit" class="tooltipped" title="编辑" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-pencil-square-o"></i></a>
                                    </td>
                                </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <% include ../../_nav_bottom.ejs%>
</div>
<% include  ../../footer.ejs %>