<header class="header sticky">
    <!--Adding class "sticky" to header enables its pinning to top on scroll. Please note in a "boxed" mode header doesn't stick to the top.-->
    <div class="inner nav-header">
        <div class="container group">

            <!--Logo-->
            <div style="float:left;width:150px;height: 60px;">
                <a class="logo" href="/"><img src="/static/img/smlogo_png.png" alt="神木医药网"/></a>
            </div>
            <h4 style="float: left;margin-left: 40px;color: #666666;line-height: 60px;">神木医药网后台管理系统</h4>
            <!--Navigation Toggle-->
            <div class="left-off-canvas-toggle" id="nav-toggle">
                <span></span>
            </div>
            <div class="cont-info pull-right" style="font-size: 14px;line-height: 60px;">
                <% if (typeof(data._userInfo) === "undefined"){ %>
                <div>
                    <a id="login_link" href="/login?nextTo=<%= data.nextTo%>"><i class="fa fa-user"></i>请登录</a>
                    或&nbsp;<a id="redirect_register" href="/page/register">注册</a>
                </div>
                <% } else { %>
                <% var username = data._userInfo.clientName? data._userInfo.clientName:data._userInfo.operatorName %>
                <div style="float: left;width: 110px;">
                    <% if(data._userInfo&&data._userInfo.operatorType=="CUSTOMER") { %>
                    <a href="/customer" title="<%= username %>">
                        <% } else { %>
                        <a href="/portal" title="<%= username %>">
                            <% } %>
                            <i class="fa fa-user"></i>
                            <%= username %>
                            <% if (data._client) { %>
                            <% if (data._client.registerStatus === "CREATED") { %>
                            <%= "(待审核)" %>
                            <% } else if (data._client.registerStatus === "REJECTED") { %>
                            <%= "(审核申请被退回)" %>
                            <% }%>
                            <% } %>
                        </a>
                    </a>
                </div>
                <div style="float:right;">
                    <a  href="/logout" class="logout"><i class="fa fa-power-off"></i>退出</a>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</header>
<!--Header Close-->
