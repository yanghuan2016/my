<% include ../header.ejs%>

<div style="position:relative;width:100%;height:100%;">
    <!--Layout-->
    <div class="site-layout">
            <!--Header Toolbar-->
            <!--Header Toolbar Close-->

            <!--Header-->
        <% include ../center/_nav_head.ejs%>
            <div class="page double-padding-bottom">
                <div class="container page-content">
                    <div class="row space-top" >
                        <% var active = "carousel"; %>
                        <% include ../center/_nav_customer_left.ejs%>
                        <section class="col-md-10 pull-right space-bottom">
                            <div class="filterDivTab">
                                <% var curtTab = 'linkColumn';%>
                                <% include portalTab.ejs %>
                            </div>
                            <table class="sm-page-table">
                                <%var allLinks=data.links%>
                                <%var linkLength=allLinks.length%>
                                <!--need the layout-->
                                <thead>
                                <tr>
                                    <td>页脚名称</td>
                                    <td>
                                        <a class="btn btn-primary" href=
                                        "<%= linkLength>=4?"javascript:void(0)":"/page/customer/portal/linkColumn/add" %>"
                                                <%= linkLength>=4?'style=background-color:#ddd':''%>
                                                <%= linkLength>=4?'onclick=artDialogAlertModal(\"最多添加4个,请先删除一些~\")':''%> >新增</a>
                                    </td>
                                </tr>
                                </thead>
                                <tbody>
                                <%for(var i=0;i<linkLength;i++){%>
                                <%var column=allLinks[i];%>
                                <tr data-level="c1" data-col="<%=i%>" data-id="<%=column.columnId%>">
                                    <td>
                                        <li style="list-style:none"><a class="productcategory<%=i%> click-link" style="cursor: pointer" name="productcategory<%=i%>">
                                                <!--<i class="fa fa-plus-square-o"></i>&nbsp;&nbsp;
                                                公司介绍-->
                                                <%if(column.links.length!=0){%>
                                                <i class="fa fa-plus-square-o"></i>&nbsp;&nbsp;
                                                <%}%>
                                                <%=column.columnName%>
                                            </a>
                                        </li>
                                    </td>
                                    <td>
                                        <a href="/page/customer/portal/linkColumn/item/<%=column.columnId%>" ><i class="fa fa-pencil-square-o tooltipped" data-toggle="tooltip" data-placement="top" title="修改" style="margin-right: 8px"></i></a>
                                        <a href="javascript:void(0)" class="updateLinkOrder" ><i class="fa fa-arrow-circle-up tooltipped" data-toggle="tooltip" data-placement="top" title="置顶" style="margin-right: 8px"></i></a>
                                        <!--<a href="#" ><i class="fa fa-times-circle tooltipped" data-toggle="tooltip" data-placement="bottom" title="删除" ></i></a>-->
                                        <a href="/page/customer/portal/link/add/<%=column.columnId%>"><i class="fa fa-plus tooltipped" data-toggle="tooltip" data-placement="left" title="添加" style="margin-right: 8px"></i></a>
                                        <a href="javascript:void(0)" class="ColumnDeleteBtn" data-id="<%=column.columnId%>"><i class="fa fa-trash tooltipped" data-toggle="tooltip" data-placement="left" title="删除" ></i></a>
                                    </td>
                                </tr>
                                <%var columnRows=column.links,columnRowsLength=columnRows.length; %>
                                <%for(var j=0;j<columnRowsLength;j++){%>
                                <%var colRow=columnRows[j]%>
                                <tr id="productcategory<%=i%><%=j%>>" data-row="<%=i%>" data-id="<%=colRow.linkId%>" style="display: none">
                                    <td style="padding: 8px 8px 8px 40px;font-size: 15px;">
                                        <input type="hidden" value="<%=colRow.linkId%>"/>
                                        <%=colRow.linkName%>
                                    </td>
                                    <td>
                                        <!--                                            <a href="#" ><i class="fa fa-plus tooltipped" data-toggle="tooltip" data-placement="left" title="添加" style="margin-right: 8px"></i></a>-->
                                        <a href="/page/customer/portal/link/item/<%=colRow.linkId%>" ><i class="fa fa-pencil-square-o tooltipped" data-toggle="tooltip" data-placement="top" title="修改" style="margin-right: 8px"></i></a>
                                        <a href="javascript:void(0)" class="updateSubLinkOrder" ><i class="fa fa-arrow-circle-up tooltipped" data-toggle="tooltip" data-placement="top" title="置顶" style="margin-right: 8px"></i></a>
                                        <a href="javascript:void(0)" data-id="<%=colRow.linkId%>" class="colRowDeleteBtn" ><i class="fa fa-trash tooltipped" data-toggle="tooltip" data-placement="left" title="删除" ></i></a>
                                    </td>
                                </tr>
                                <%}%>
                                <%}%>
                                <tr style="display:none">
                                    <td colspan="2" style="text-align: right;<%=linkLength==0?'display:none':null%>">
                                        <span style="color: #dddddd;margin-right:40px">亲,排序之后请点击右方的保存按钮更新</span>
                                        <a href="javascript:void(0)" id="FooterSaveOrderBtn" class="btn btn-primary">保存</a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    <% include ../_nav_bottom.ejs%>
</div>

<% include  ../footer.ejs %>
<script src="/static/source/js/portal.js"></script>