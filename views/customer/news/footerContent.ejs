<% include ../header.ejs %>
<%
var paginator = data.paginator || {};
var pageSize = parseInt(paginator.ps) || 10;
var page = parseInt(paginator.p) || 1;
%>
<style>
    html{
        height:100% !important;
    }

</style>
<div style="position:relative;width:100%;height:100%;">
    <!--Layout-->
    <div class="site-layout" style="padding-bottom: 100px;">


        <% include ../_nav_top.ejs %>

        <% include ../_nav_head.ejs %>

        <div class="page">

            <div class="container page-nav">
                <ol class="breadcrumb">
                    <li><a href="/" class="click-link">主页</a></li>
                    <i class="fa fa-angle-right"></i>
                    <li class="click-link"><%= data.link.columnName %></li>
                </ol>
            </div>

            <div class="container page-content" >
                <div class="row"  style="background-color: white;min-height:800px">
                    <div style="margin-top:20px"></div>
                    <h3 id="staticTitle" style="text-align: center"><%=data.link.title%></h3>
                    <div id="newsContent" style="padding:50px">
                        <%-data.link.content%>
                    </div>


                </div>
            </div>
        </div>
    </div>

</div>

<div style="bottom:0;left:0;width:100%">
    <% include ../_nav_bottom.ejs%>
</div>
<% include ../footer.ejs %>
<script type="text/javascript">
    $(function(){
        $('title').html($('#staticTitle').html())
    })
</script>
