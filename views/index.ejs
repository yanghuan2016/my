                                                <div class="index-carousel-background-container" ></div>
                                                <div class="index-carousel-text-container" >
                                                    <div class="index-carousel-text-ultimate-container">
                                                      <span class="index-carousel-text">
                                                          <%= currentCarousel.displayText %>
                                                      </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                </li>
                          <%}%>
                        </ul>
                    </div>

