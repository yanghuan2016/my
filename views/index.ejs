                                </div>
                                <div class="content-left-img-info">
                                    <div>
                                        <div>
                                            <div class="showcase-price">
                                                <%if(typeof(data._userInfo)!="undefined"&&data._userInfo.operatorType=="CLIENT"){%>
                                                <% var _clientGoodsPrice=currentShowcase.detail[0].clientGoodPrice; %>
                                                <%if(_clientGoodsPrice!="undefined"&&_clientGoodsPrice!=null&&Number(_clientGoodsPrice)!=0){%>
                                                &yen;<%= Number(_clientGoodsPrice).toFixed(4) %>
                                                <%}else{%>
                                                暂无信息
                                                <%}%>
                                                <%}else{%>
                                                <% var _refRetailPrice=currentShowcase.detail[0].price; %>
                                                <%if(_refRetailPrice!="undefined"&&_refRetailPrice!=null&&Number(_refRetailPrice)!=0){%>
                                                &yen;<%= Number(_refRetailPrice).toFixed(4) %>
                                                <%}else{%>
                                                暂无信息
                                                <%}%>
                                                <%}%>
                                            </div>
                                            <div class="showcase-commonName">
                                                <a href="/goods/detail?goodsId=<%= currentShowcase.detail[0].goodsId%>" title="<%=currentShowcase.detail[0].commonName %>">
                                                    <%=currentShowcase.detail[0].commonName %>
                                                </a>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="showcase-producer">
                                                <a title="<%=currentShowcase.detail[0].producer %>">
                                                    <%=currentShowcase.detail[0].producer %>
                                                </a>
                                            </div>
                                            <div class="showcase-producer">
                                                <a title="<%=currentShowcase.detail[0].spec %>">
                                                    <%=currentShowcase.detail[0].spec %>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="number-box">
                                            <span>
                                                <a class="indexShowcaseUpdateNum" type="decrease"><i class="fa fa-minus"></i></a>
                                                <input type="text" value="1" class="input_nu">
                                                <a class="indexShowcaseUpdateNum" type="increase"><i class="fa fa-plus"></i></a>
