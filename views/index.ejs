                                            <div class="showcase-commonName">
                                                <a href="/goods/detail?goodsId=<%= currentSCgoods.goodsId%>" title="<%=currentSCgoods.commonName %>">
                                                    <%= currentSCgoods.commonName %>
                                                </a>
                                            </div>
                                            <div class="showcase-producer">
                                                <a title="<%=currentSCgoods.producer %>">
                                                    <%= currentSCgoods.producer %>
                                                </a>
                                            </div>
                                            <div class="showcase-producer">
                                                <a title="<%=currentSCgoods.spec %>">
                                                    <%= currentSCgoods.spec %>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="list-item-right">
                                        <div class="showcase-price">
                                            <%if(typeof(data._userInfo)!="undefined"&&data._userInfo.operatorType=="CLIENT"){%>
                                            <% var _clientGoodsPrice=currentSCgoods.clientGoodPrice; %>
                                            <%if(_clientGoodsPrice!="undefined"&&_clientGoodsPrice!=null&&Number(_clientGoodsPrice)!=0){%>
                                            &yen;<%= Number(_clientGoodsPrice).toFixed(4) %>
                                            <%}else{%>
                                            暂无信息
                                            <%}%>
                                            <%}else{%>
                                            <% var _refRetailPrice=currentSCgoods.price; %>
                                            <%if(_refRetailPrice!="undefined"&&_refRetailPrice!=null&&Number(_refRetailPrice)!=0){%>
                                            &yen;<%= Number(_refRetailPrice).toFixed(4) %>
                                            <%}else{%>
                                            暂无信息
                                            <%}%>
                                            <%}%>
                                        </div>
                                        <div class="number-box">

                                            <% var defaultNum = currentSCgoods.isSplit == 1 ? 1 : currentSCgoods.middlePackNum %>
                                            <% var storage=currentSCgoods.negSell == 1?"-1":currentSCgoods.storage %>
                                            <% var isSplit = currentSCgoods.isSplit %>
                                            <% var i = currentSCgoods.goodsId %>

                                            <% include ./customer/portal/addToCartNumbar.ejs%>

                                            <% var isLogin = !(typeof(data._userInfo) === "undefined"); %>
                                            <%if(data._userInfo&&data._userInfo.operatorType =="CUSTOMER"){%>
                                            <a class="click-link tooltipped"  data-display="pic" data-toggle="tooltip" data-placement="bottom">
                                                <i class="fa fa-shopping-cart" style="color:grey"></i>
                                            </a>
                                            <%}else{%>
                                            <div>
                                                <a goodsId="<%= currentSCgoods.goodsId %>" data-checkLogin="<%= isLogin%>"
                                                   class="click-link tooltipped indexAddtoCart" title="加入购物车" data-toggle="tooltip" data-placement="bottom">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </a>
                                            </div>
                                            <%}%>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                <% if (currentShowcase.detail.length <  7){%>
                                <div class="content-right-list-item" style="border-bottom: none;">
                                    <div class="not-more">推荐栏没有更多的商品了～</div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </section>
                    <%}
                        else if(currentShowcase.mode=='ICONLIST'){
                    %>
                        <section class="container space-top">
                            <h3  class="sc_header"><%= currentShowcase.title %></h3>
                            <div class="borderGreen"></div>
