                                                    </div>
                                                    <div  class="icon_sc_cell_company_spec">
                                                        <%= currentSCgoods.spec %>
                                                    </div>

                                                    <div class="icon_sc_cell_bottom">
                                                        <% var defaultNum = currentSCgoods.isSplit == 1 ? 1 : currentSCgoods.middlePackNum %>
                                                        <% var storage=currentSCgoods.negSell == 1?"-1":currentSCgoods.storage %>
                                                        <% var isSplit = currentSCgoods.isSplit %>
                                                        <% var i = currentSCgoods.goodsId %>

                                                        <% include ./customer/portal/addToCartNumbar.ejs%>
                                                        <% var isLogin = !(typeof(data._userInfo) === "undefined"); %>
                                                        <%if(data._userInfo&&data._userInfo.operatorType =="CUSTOMER"){%>
