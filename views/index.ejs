            <% var length = 10;%>
            <% var active = "index";%>
            <% include customer/_nav_head.ejs%>
            <!--Header Close-->

            <!--Page Content--><!-- InstanceBeginEditable name="content" -->
            <div class="page blog" style="margin-bottom: 60px;">
                <!-- slider -->
                <section class="container space-bottom" style="padding-right: 0">

                    <div class="flexslider carouselATag" style="overflow:hidden;height: 390px;margin: 10px 17.916667% 0 15.416667%;border: none;">
                        <ul class="slides  " style="height: 390px">
                          <%var carouselsLength=data.carousels.length%>
