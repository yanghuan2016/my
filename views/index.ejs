                            <div class="title">
                                <span>商家承诺</span>
                            </div>
                            <div class="content container-fluid">
                                <div class="col-md-4">
                                    <span class="contentTitle">低</span>
                                    <span class="contentContent">价格最低</span>
                                </div>
                                <div class="col-md-4">
                                    <span class="contentTitle">正</span>
                                    <span class="contentContent">正品保证</span>
                                </div>
                                <div class="col-md-4">
                                    <span class="contentTitle">全</span>
                                    <span class="contentContent">种类齐全</span>
                                </div>
                            </div>
                        </div>
                        <div class="newsList">
                            <div class="title">
                                <span>新闻公告</span>
                                <a href="/newsList">更多<i class="fa fa-angle-right"></i></a>
                            </div>
                            <div class="content">
                                <ul>
                                    <%var newsLength=data.news.length%>
                                    <%if(newsLength==0){%>
                                    <li>
                                        <a>亲,暂时没有新闻～<i title="热点" class="fa fa-fire"></i></a>
                                    </li>
                                    <%}%>
                                    <%for(var j=0;j<newsLength;j++){%>
                                    <%var currentNews=data.news[j]%>
                                    <li>
                                        <a href="/news/<%= currentNews.id%>">
                                            <%= currentNews.newsTitle %>
                                        </a>
                                    </li>
                                    <%}%>
                                </ul>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- slider Close-->
                <% var showcases = data.showcases; %>
                <% var scLength = showcases.length %>
                <% if(scLength==0) {%>

                <section class="container space-top">
                    暂时没有推荐商品
                </section>
                <% } else { %>
                    <% for( var k = 0; k < scLength; k++){ %>
                    <% var currentShowcase = showcases[k]; %>
                    <% if(currentShowcase.mode=='LIST'){%>
                    <% var imgUrl=currentShowcase.detail[0].img; %>
                    <% var isValidImgUrl=imgUrl==null||typeof(imgUrl)=="undefined"||imgUrl=="undefined"||imgUrl=="" %>
                <section class="container space-top">
                    <div class="showcase-list">
                        <div class="showcase-title">
                            <h3><%= currentShowcase.title %></h3>
                        </div>
                        <div class="showcase-content">
                            <div class="content-left">
                                <div class="content-left-img-url">
                                    <a href="/goods/detail?goodsId=<%= currentShowcase.detail[0].goodsId  %>">
                                        <img src="<%= isValidImgUrl?"/static/img/blog/posts/post01.jpg":currentShowcase.detail[0].img %>"/>
