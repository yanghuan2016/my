                                                            <i class=" fa fa-shopping-cart "></i>
                                                        </div>
                                                        <%}else{%>
                                                        <div  data-checkLogin="<%= isLogin%>"  goodsId="<%=currentSCgoods.goodsId  %>" data-stock="<%= currentSCgoods.inventory %>" class=" addToCart iconCartColor icon_sc_cell_cart_container">
                                                            <i class=" fa fa-shopping-cart "></i>
                                                        </div>
                                                        <%}%>
                                                    </div>
                                                </div>
                                            </div>
                                            <%}else{%>
                                                <div class="<%= cellClassName%>">
                                                </div>
                                            <%}%>

                                            <%}%>
                                        </div>
                                </section>
                            </section>
                        </section>
                    <%}%>
                    <% } %>
                <% } %>
            </div>
    <% include customer/_nav_bottom.ejs%>
    </div>
</div>



