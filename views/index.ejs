                                    <div class="icon_sc_imgContainer">
                                        <a href="<%= currentShowcase.advertiseHref  %>">
                                            <img class="icon_sc_img" src="<%= currentShowcase.advertiseImg %>" alt=""/>
                                        </a>
                                    </div>
                                </section>
                                <section class=" icon_sc_rightContainer page-content-right pull-right " style="height: inherit">

                                        <div style="display:flex;flex-wrap:wrap;height:100%;width:100%">
                                            <% for(var m=0;m<8;m++){%>
                                            <%var currentSCgoods=currentShowcase.detail[m]
                                                var cellClassName='icon_sc_firstRow_goodCell';
                                                if(m>=4){
                                                    cellClassName='icon_sc_firstRow_goodCell_topBorder';
                                                }
                                                ;%>
                                            <% if(typeof(currentSCgoods)!='undefined'){%>
                                            <div class="<%= cellClassName%>">
                                                <div class="icon_sc_cell_imgContainer">
                                                    <a href="/goods/detail?goodsId=<%= currentSCgoods.goodsId %>">
                                                        <img class="goodCell_img" src="<%= currentSCgoods.img==null||typeof(currentSCgoods.img)=='undefined'?'/static/img/index/noPic.png':currentSCgoods.img %>" alt=""/>
                                                    </a>
                                                </div>
                                                <div class="icon_sc_cell_infoContainer">
                                                    <div class="icon_sc_cell_price">
                                                        <%if(typeof(data._userInfo)!="undefined"&&data._userInfo.operatorType=="CLIENT"){%>
                                                        <% var _clientGoodsPrice=currentSCgoods.clientGoodPrice; %>
                                                        <%if(_clientGoodsPrice!="undefined"&&_clientGoodsPrice!=null&&Number(_clientGoodsPrice)!=0){%>
                                                        &yen;<text><%= Number(_clientGoodsPrice).toFixed(4) %></text>
                                                        <%}else{%>
                                                        暂无信息
                                                        <%}%>
                                                        <%}else{%>
                                                        <% var _refRetailPrice=currentSCgoods.price; %>
                                                        <%if(_refRetailPrice!="undefined"&&_refRetailPrice!=null&&Number(_refRetailPrice)!=0){%>
                                                        &yen;<text><%= Number(_refRetailPrice).toFixed(4) %></text>
